.login-body
  .title 
    Log in to Tweeter
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-login"} )do |f|
    .form-parts
      %span Username
      = f.text_field :username, autofocus: true, autocomplete: "username", class: "fields"
    .form-parts
      %span Password
      = f.password_field :password, autocomplete: "current-password", class: "fields"
    .actions-login
      = f.submit "Log in", class: "button"
  .links-login
    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      = link_to "Forgot password? ", new_password_path(resource_name), class: "links" 
    %span 
    - if devise_mapping.registerable? && controller_name != 'registrations'
      = link_to " Sign up for Tweeter", new_registration_path(resource_name), class: "links" 
