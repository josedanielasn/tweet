- if @last_page > 1
  .pages
    - if @page != 0
      = link_to '< Back', user_path(page: @page - 1)
    - if @page - 2 > -1 
      = link_to 1, user_path
      %span ... 
    - if @page == @last_page - 2
      - if @last_page > 2
        = link_to @page, user_path(@user, page: @page - 1)
      = @page + 1
      = link_to @page + 2, user_path(@user, page: @page + 1)
    - elsif @page == @last_page - 1
      - if @last_page > 2
        = link_to @page - 1 , user_path(@user, page: @page - 2)
      = link_to @page , user_path(@user, page: @page - 1)
      = @page + 1
    - else
      = @page + 1
      - if @last_page != 1
        = link_to @page + 2, user_path(@user, page: @page + 1)
      - if @last_page > 2 
        = link_to @page + 3, user_path(@user, page: @page + 2)
    - if @page + 3 < @last_page 
      %span ...  
      = link_to @last_page, user_path(@user, page: @last_page - 1 )
    - if @page != @last_page - 1
      = link_to 'Next >', user_path(@user, page: @page + 1)
