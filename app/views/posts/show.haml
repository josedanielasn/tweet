%h1 Tweet

= render 'layouts/nav_bar'

.tweet-block 
  .info-actions
    .info
      %strong written by: 
      = link_to @user.username, user_path(@user) 
    - if @user == current_user
      .action
        = link_to 'Delete', user_post_path(current_user, @post), method: :delete, data: { confirm: 'Are you sure?' }, local: true
  .tweet
    = @post.message
