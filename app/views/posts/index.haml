%h1 Home Page/ All Posts
= render 'layouts/nav_bar'

.new-tweet
  = form_with model: @post, url: user_posts_path(current_user), html: {class: "form-tweet"}, local: true do |f|
    .fields 
      = f.text_area :message    
    .submit-button
      = f.submit 'tweet', class: 'button'

.list-posts 
  - if @posts.empty?
    No tweets
  - else
    = render partial: 'layouts/posts', collection: @posts
